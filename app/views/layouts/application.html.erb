<!DOCTYPE html>
<html>
<head>
  <title>FitnessApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="container-fluid">



<nav class="navbar navbar-default">
     <% if current_user %>

    		<ul class="nav navbar-nav navbar-right">
					<li>
						<%= link_to "Log Out", logout_path %>
					</li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li>
						<%= link_to current_user.first_name, users_path(@user) if current_user%>
					</li>
				</ul>

			<% else %>

				<ul class="nav navbar-nav navbar-right">
					<li>
						<%= link_to "Sign Up", signup_path %>
					</li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li>
						<%= link_to "Log In", login_path %>
					</li>
				</ul>
			<% end %>
</nav>


<!-- 	<div class="pull-right">
		<% if current_user %>
			Logged in as <%= link_to current_user.first_name, @user if current_user%> | <%= link_to "Log Out", logout_path, class: "btn btn-primary" %>
		<% else %>
			<%= link_to "Log In", login_path %> | <%= link_to "Sign Up", signup_path, class: "btn btn-success" %>
		<% end %>
	</div>
	 -->

	<!-- This is where the flash message will display -->
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>" role="alert">
      <%= value %><br>
    </div>
  <% end %>


<%= yield %>

</body>
</html>
