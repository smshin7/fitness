<h1>Your Profile</h1>

<div class="container">
	<% @users.each do |user| %>

		<h1>Profile</h1>

			Name: <%= user.first_name %> <%= user.last_name %><br>
			Age: <%= user.age %><br>
			Gender: <%= user.gender %><br>
			E-mail: <%= user.email %><br>
			Height (in): <%= user.height %><br>
			Weight (lbs): <%= user.weight %><br>
			Location: <%= user.location %><br>
			Gym: <%= user.gym %><br>
			Goals: <%= user.goal %><br>

	<% end %>
	<br>
	<br>
	<%= link_to "Edit Profile", edit_user_path(@user) %>
	<%= link_to "Go back to your workouts!", users_path %>

</div>
